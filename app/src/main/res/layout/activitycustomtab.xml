<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:elevation="@dimen/headerarrowimg"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/brolblue"
        android:visibility="visible"
        >
        <RelativeLayout
            android:id="@+id/tablayout"
            android:layout_width="@dimen/tabminwidth"
            android:layout_height="@dimen/passimgheight"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">


                <com.tripsolver.backoffice.model.CustomTextView
                    android:id="@+id/tabtittle"
                    android:layout_width="wrap_content"
                    app:customFont="Lato-Bold.ttf"
                    android:text="7 day Activity"
                    android:layout_marginLeft="@dimen/marginsmall"
                    android:layout_marginTop="@dimen/marginsmall"
                    android:textSize="@dimen/passtittlestart"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>